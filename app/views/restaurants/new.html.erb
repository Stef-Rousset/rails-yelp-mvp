<div class="container">
<h1>Add a restaurant</h1>


<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>
</div>
