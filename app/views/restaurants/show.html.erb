<div class="container">
  <h1>Restaurant selected</h1>

  <div class="contenu">
    <h3>Name : <%= @restaurant.name %></h3>
    <h3>Adress : <%= @restaurant.address %></h3>
    <h3>Categroy : <%= @restaurant.category%></h3>

    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
</div>
